<%= form_with(model: album) do |form| %>
  <% if album.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>
      <ul>
        <% album.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control", placeholder: "Title" %>
  </div><br>

  <div class="field">
    <%= form.label :cover_photo %>
    <%= form.file_field :cover_photo, class:"form-control" %>
  </div><br>

 <div class="field form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class:"form-control", placeholder: "Description" %>
  </div><br>

  <div class="field form-group">
    <%= form.label :tag %>
    <%= form.text_field :all_tags, class:"form-control", placeholder: "Tags (comma seperated values)" %>
  </div><br>  

  <div class="field">
    <%= form.label :photos %>
    <%= form.file_field :photos, :multiple => true, class:"form-control" %>
  </div><br>

  <div class="field">
    <%= form.label :published %>
    <%= form.check_box :published %>
  </div><br>

  <div>  
    <%= form.number_field :user_id, id: :album_user_id, type: :hidden, class:"form-control", value: current_user.id  %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-info" %>
  </div><br>
<% end %>